generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  lastVisited DateTime @default(now())
  worlds      World[]
}

model World {
  id        Int        @id @default(autoincrement())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  summary   String?
  createdAt DateTime   @default(now())
  characters Character[]
  locations  Location[]
  magics     Magic[]
  factions   Faction[]
  events     StoryEvent[]
}

model Character {
  id          Int       @id @default(autoincrement())
  worldId     Int
  world       World     @relation(fields: [worldId], references: [id], onDelete: Cascade)
  name        String
  role        String?
  age         String?
  description String?
  personality String?
  backstory   String?
  strengths   String?
  weaknesses  String?
  tags        String?
  relationships String?
}

model Location {
  id               Int      @id @default(autoincrement())
  worldId          Int
  world            World    @relation(fields: [worldId], references: [id], onDelete: Cascade)
  name             String
  type             String?
  description      String?
  history          String?
  population       String?
  climate          String?
  connected        String?
}

model Magic {
  id          Int     @id @default(autoincrement())
  worldId     Int
  world       World   @relation(fields: [worldId], references: [id], onDelete: Cascade)
  name        String
  category    String?
  description String?
  rules       String?
  limitations String?
  costs       String?
  examples    String?

  @@map("Magic")
}

model Faction {
  id          Int     @id @default(autoincrement())
  worldId     Int
  world       World   @relation(fields: [worldId], references: [id], onDelete: Cascade)
  name        String
  type        String?
  description String?
  leader      String?
  members     String?
  goals       String?
  conflicts   String?
}

model StoryEvent {
  id                 Int      @id @default(autoincrement())
  worldId            Int
  world              World    @relation(fields: [worldId], references: [id], onDelete: Cascade)
  title              String
  date               String?
  description        String?
  location           String?
  charactersInvolved String?
  outcome            String?
  timestamp          DateTime?
}
